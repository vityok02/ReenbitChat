@page "/waiting-room"
@using ReenbitChatClient.Models
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>Waiting Room</PageTitle>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Онлайн чат</h3>
            <div class="form-group mb-3">
                <label for="userInput" class="form-label">Имя пользователя</label>
                <input id="userInput" @bind="userInput" class="form-control" placeholder="Введите ваше имя" />
            </div>
            <div class="form-group mb-4">
                <label for="chatInput" class="form-label">Название чата</label>
                <input id="chatInput" @bind="chatInput" class="form-control" placeholder="Введите название чата" />
            </div>
            <button @onclick="Join" class="btn btn-primary w-100">Присоединиться</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public EventCallback<UserConnection> JoinChat { get; set; }
    private string? chatInput;
    private string? userInput;

    private async Task Join()
    {
        if (!string.IsNullOrEmpty(userInput) && !string.IsNullOrEmpty(userInput))
        {
            await JoinChat.InvokeAsync(new UserConnection(userInput, chatInput));
        }
    }
}
